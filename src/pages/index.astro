---
import RootLayout from "@/layouts/root.astro";
import Logo from "@/components/logo.astro";
import IconArrowDown from "@/components/icon-arrow-down.astro";
import IconHamburger from "@/components/icon-hamburger.astro";
import Footer from "@/components/footer.astro";
import Gallery from "@/components/gallery.astro";
import ClientTestimonials from "@/components/client-testimonials.astro";
import Showcase from "@/components/showcase.astro";
import AboutUs from "@/components/about-us.astro";
---

<RootLayout>
  <header>
    <a><Logo /></a>
    <nav>
      <a href="#">About</a>
      <a href="#">Services</a>
      <a href="#">Projects</a>
      <a href="#">Contact</a>
    </nav>
    <button><IconHamburger /><span>Menu</span></button>
  </header>
  <main>
    <section>
      <h1>We are creatives</h1>
      <IconArrowDown />
    </section>
    <AboutUs />
    <Showcase />
    <ClientTestimonials />
    <Gallery />
  </main>
  <Footer />
</RootLayout>
