---
import Logo from "@/components/logo.astro";
import IconHamburger from "@/components/icon-hamburger.astro";
---

<header class="primary-header">
  <a><Logo /></a>
  <nav class="navigation">
    <a href="#">About</a>
    <a href="#">Services</a>
    <a href="#">Projects</a>
    <a class="contact-btn" href="#">Contact</a>
  </nav>
  <button class="toggle-menu" aria-expanded="false">
    <IconHamburger />
    <span class="visually-hidden">Menu</span>
  </button>
</header>

<script>
  const toggleMenu = document.querySelector(".toggle-menu");
  const navigation = document.querySelector(".navigation");

  toggleMenu?.addEventListener("click", () => {
    navigation?.hasAttribute("data-visible")
      ? toggleMenu?.setAttribute("aria-expanded", "false")
      : toggleMenu?.setAttribute("aria-expanded", "true");
    navigation?.toggleAttribute("data-visible");
  });
</script>

<style>
  .primary-header {
    position: absolute;
    inset: 0 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: var(--clr-neutral-100);
    padding: 2.5rem 1.5rem;

    @media (min-width: 47rem) {
      padding: 2rem 2.5rem;
    }
  }

  .navigation {
    display: flex;
    align-items: center;
    gap: 3rem;

    @media (max-width: 46.9375rem) {
      display: none;

      flex-direction: column;
      gap: 1.5rem;
      position: absolute;
      inset: 6rem 1.5rem auto;
      color: var(--clr-neutral-400);
      background-color: var(--clr-neutral-100);
      padding: 2rem 1.5rem;
      font-size: var(--fs-500);

      &::before {
        content: "";
        position: absolute;
        width: 1.5rem;
        height: 1.5rem;
        top: -1.5rem;
        right: 0;
        background-color: var(--clr-neutral-100);
        clip-path: polygon(100% 0%, 0% 100%, 100% 100%);
      }
    }
  }

  .navigation[data-visible] {
    display: flex;
  }

  .contact-btn {
    display: inline-flex;
    align-items: center;
    height: 3.5rem;
    padding: 0 2rem;
    border-radius: 999rem;
    background-color: var(--clr-primary-yellow);
    color: var(--clr-neutral-800);
    font-family: var(--ff-secondary);
    font-weight: var(--fw-medium);
    font-size: var(--fs-300);
    text-transform: uppercase;

    @media (min-width: 47rem) {
      --bg-opacity: 1;
      background-color: hsl(var(--clr-white) / var(--bg-opacity));
      color: var(--clr-neutral-800);
      transition: all 0.3s ease-in-out;
    }
  }

  .contact-btn:hover {
    --bg-opacity: 0.3;
    @media (min-width: 47rem) {
      color: var(--clr-neutral-100);
    }
  }

  .toggle-menu {
    background: none;
    border: none;
    color: inherit;
    cursor: pointer;
    padding: 0.25rem;

    @media (min-width: 47rem) {
      display: none;
    }
  }

  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }
</style>
