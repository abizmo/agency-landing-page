---
import Sunnyside from "../assets/logo.svg";

interface Props {
  large?: boolean;
}

const { large } = Astro.props;
---

<Sunnyside class:list={[{ large }]} fill="currentColor" />

<style>
  svg {
    height: 1.5rem;
    width: 7.75rem;

    @media (min-width: 47rem) {
      height: 2rem;
      width: 10.25rem;
    }
  }

  .large {
    height: 2rem;
    width: 10.25rem;
  }
</style>
